    "target": "es2016",
    "lib": ["es2020"],
    "module": "commonjs", 
    "rootDir": "src", 
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
